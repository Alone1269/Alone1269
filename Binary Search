#include<stdio.h>
int main()
{
    int n;
    printf("Binary Search ! \n\n How much input you want to in Type : ");
    scanf("%d",&n);
    
    int x[1000] , i , high , mid , low , m , o = 0;
    printf("\033[1;31m");
    printf("\nWarning  : Type Numbers From Smallest To Largest!");
    printf("\033[0m");
    
    printf("\nNow You can input For Binary Search ...\n");
    for(i=0 ; i<n; i++)
    {
        scanf("%d",&x[i]);
        if(i >= 1)
        {
            if( x[i-1] > x[i])
            {
                printf("\033[1;31m");
                printf("\nType Numbers From Smallest To Largest :)\n");
                printf("\033[0m");
                i = i - 1;
            }
        }
        
    }
    
    printf("Now Which number you want to find : ");
    scanf("%d",&m);
    
    low = 0 ;
    high = n - 1;
    
    
    while( low <=high)
    {
        mid = ( low + high ) / 2 ;
        if(x[mid] == m)
        {
            printf("\n\"%d is found at the location %d\"", m , mid + 1 );
            o++;
            break;
        }
        else if( x[mid] < m)
        {
            low = mid + 1 ;
        }
        else
        {
            high = mid - 1 ;
            mid = (low + high) / 2 ;
        }
    }
    if( o == 0)
    {
        printf(" %d Your value not found ",m);
    }
    
    
    
    return 0;
}
