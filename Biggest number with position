#include <stdio.h>

int main() {
    int x[100];
    int n = 0, a ,b;

    for (int i = 0; i < 100; i++) 
    {
        scanf("%d", &x[i]);
        a = x[i]; 

        if (a > n) 
        { 
            n = a;
            b =i ;
            
        }
    }

    printf("%d\n", n);
    printf("%d\n", b+1);

    return 0;
}
