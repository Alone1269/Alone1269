#include<stdio.h>

int main ()
{
    printf("\n\nType your age for know can you capable for voting !\n\n");

    float age , result ;
    int voteingAge = 18;

    printf("Type your age for know can you capable for voting :");
    scanf("%f", &age);

    if (age >= voteingAge )

        {
            printf("\n\n\nYou are capable for voting !\n\n");
        }
    else

        {
            result= voteingAge - age;

            printf("\n\n\nYou are not capable for voting ! You are capable after :%.2f year.month !\n\n",result);
        }

    return 0;
}
